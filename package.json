{
  "name": "kitty_bot",
  "version": "2.0.0",
  "description": "A Telegram bot to replace Kitty organizing our pubquiz participation.",
  "keywords": [
    "nodejs",
    "prisma",
    "pubquiz",
    "sqlite",
    "telegrafjs",
    "telegram",
    "telegram-bots",
    "typescript"
  ],
  "author": "Max Karadeniz <max@karadeniz.io>",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "db:generate": "prisma generate",
    "db:push": "dotenv -e .env prisma db push",
    "db:studio": "prisma studio",
    "deploy": "git pull && yarn build && yarn sv:restart",
    "dev": "nodemon src/index.ts",
    "format": "prettier --loglevel warn --write .",
    "sv:restart": "supervisorctl restart bot-kitty",
    "sv:start": "supervisorctl start bot-kitty",
    "sv:stop": "supervisorctl stop bot-kitty",
    "start": "node ./dist/src",
    "test": "yarn test:types && yarn test:lint",
    "test:lint": "eslint . --ext .js --ext .ts --fix && clear",
    "test:types": "tsc --project tsconfig.json --pretty --noEmit && clear"
  },
  "dependencies": {
    "@mrboolean/envconfig": "^3.0.0",
    "@prisma/client": "^4.10.1",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "lodash": "^4.17.21",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.1",
    "nodemon": "^2.0.20",
    "pluralize": "^8.0.0",
    "safe-json-stringify": "^1.2.0",
    "telegraf": "^4.11.2",
    "weighted-random-object": "^1.0.8",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/dotenv": "^8.2.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.14.0",
    "@types/node-cron": "^3.0.7",
    "@types/nodemailer": "^6.4.7",
    "@types/pluralize": "^0.0.29",
    "@types/safe-json-stringify": "^1.1.2",
    "@types/weighted-random-object": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "prisma": "^4.10.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^5.3.3"
  }
}
